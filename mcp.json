{
  "name": "ollama-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Ollama integration",
  "type": "server",
  "entryPoint": "dist/cli.js",
  "capabilities": [
    {
      "id": "ollama",
      "description": "Interact with local Ollama models",
      "type": "llm_proxy",
      "actions": [
        {
          "name": "list_models",
          "description": "List available Ollama models",
          "path": "/models",
          "method": "GET"
        },
        {
          "name": "pull_model",
          "description": "Pull a new Ollama model",
          "path": "/models/pull",
          "method": "POST"
        },
        {
          "name": "chat",
          "description": "Chat with an Ollama model",
          "path": "/chat",
          "method": "POST"
        },
        {
          "name": "model_info",
          "description": "Get information about a specific model",
          "path": "/models/:name",
          "method": "GET"
        }
      ]
    }
  ],
  "env": {
    "PORT": {
      "type": "number",
      "default": 3456,
      "description": "Port to run the server on"
    },
    "OLLAMA_API": {
      "type": "string",
      "default": "http://localhost:11434",
      "description": "Ollama API endpoint"
    }
  }
}